<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/actionBarRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">
        <!--android:background="@drawable/action_button_selector"-->
        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/pad5"
            android:paddingLeft="@dimen/pad10"
            android:paddingTop="@dimen/pad5" />

        <com.iqadha_app.iQadhaText.Regular_Text
            android:id="@+id/menucancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#fff"
            android:visibility="gone"


            />
        <!--android:src="@drawable/menu"-->


        <com.iqadha_app.iQadhaText.SemiboldText
            android:id="@+id/centetext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/EditLay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone">

            <!--android:background="@drawable/action_button_selector"-->
            <com.iqadha_app.iQadhaText.Regular_Text
                android:id="@+id/editABTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="add"
                android:textColor="@color/white" />
            <!--android:src="@drawable/menu"-->
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/filterLay"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="visible">


            <!--android:background="@drawable/action_button_selector"-->
            <ImageView
                android:id="@+id/filterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:focusable="true"
                android:padding="17dp"
                android:src="@mipmap/info" />
            <!--android:src="@drawable/menu"-->
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</RelativeLayout>