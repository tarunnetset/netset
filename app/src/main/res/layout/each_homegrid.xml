<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/margine_10"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/prayin_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zuhr"/>

    <com.iqadha_app.iQadhaText.Bold_text
        android:id="@+id/pray_typ_is"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/pad5"
        android:text="Fazr"
        android:textColor="@color/light_grey_new"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />
    <com.iqadha_app.iQadhaText.Regular_Text
        android:id="@+id/count_is"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5612"
        android:textStyle="bold"
        android:textSize="@dimen/text_20"
        android:textColor="@color/light_grey_new" />
    </LinearLayout>


</LinearLayout>
