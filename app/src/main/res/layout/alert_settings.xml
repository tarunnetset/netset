<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margine_20"
        android:layout_marginRight="@dimen/margine_20"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/pad15">

            <com.iqadha_app.iQadhaText.Regular_Text
                android:id="@+id/Tille_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Center"
                android:textColor="@color/light_grey_new"
                android:textSize="@dimen/text_17" />

            <ImageView
                android:id="@+id/dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/crossfast" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_grey" />

        <LinearLayout
            android:id="@+id/edit_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.iqadha_app.iQadhaText.SemiBold_edit
                android:id="@+id/edit_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margine_20"
                android:background="@null"
                android:gravity="center"
                android:minWidth="100dp"
                android:inputType="text"
                android:padding="@dimen/pad10"
                android:textColor="@color/black" />

            <View
                android:id="@+id/v_first"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margine_30"
                android:layout_marginRight="@dimen/margine_30"
                android:background="@color/grey" />
            <!--    <View
                    android:id="@+id/v_second"
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_above="@+id/apply_all"
                    android:background="@color/grey" />-->


        </LinearLayout>

        <com.iqadha_app.iQadhaText.Regular_Text
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/pad10"
            android:paddingRight="@dimen/pad10"
            android:paddingTop="@dimen/pad10"
            android:text="@string/signout_text"
            android:textColor="@color/light_grey_new"
            android:textSize="@dimen/text_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <com.iqadha_app.iQadhaText.Regular_check
                android:id="@+id/apply_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:layout_marginTop="@dimen/pad15"
                android:button="@drawable/check_boxselecter"
                android:text=" Apply to All"
                android:textColor="@color/light_grey_new" />
            <View
                android:id="@+id/v_second"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignStart="@id/apply_all"
                android:layout_alignEnd="@id/apply_all"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@color/grey" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/gen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad15"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/pad10">

            <RadioGroup
                android:id="@+id/radio_group_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <com.iqadha_app.iQadhaText.SemiboldRadio
                    android:id="@+id/male_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/green"
                    android:text="Male"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16" />

                <com.iqadha_app.iQadhaText.SemiboldRadio
                    android:id="@+id/female_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:buttonTint="@color/green"
                    android:text="Female"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16" />
            </RadioGroup>
        </LinearLayout>


        <com.iqadha_app.iQadhaText.SemiBoldButton
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margine_20"
            android:layout_marginTop="@dimen/margine_20"
            android:background="@drawable/green_round"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />

    </LinearLayout>

</LinearLayout>