<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:weightSum="10"
        android:layout_margin="@dimen/margine_40"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <com.iqadha_app.iQadhaText.SemiboldText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@color/green"
            android:text="546"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_18"
            android:textColor="@color/white"
            android:layout_height="match_parent" />
        <com.iqadha_app.iQadhaText.Regular_Text
            android:layout_width="0dp"
            android:layout_weight="8"
            android:background="@color/white"
            android:text="People are reading Qadha right now"
            android:layout_gravity="center"
           android:gravity="center_vertical" android:padding="@dimen/pad5"
            android:textSize="@dimen/text_14"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>
