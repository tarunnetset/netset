        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.iqadha_app.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iqadha_app.SignIn"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.iqadha_app.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.iqadha_app.StepSignup"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.iqadha_app.HomeActivity"
            android:theme="@style/AppTheme"
